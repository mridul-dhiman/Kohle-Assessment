<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kohliassessmentquiz">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KohliAccessmentQuiz">
        <activity
            android:name="com.example.kohliassessmentquiz.ResultActivity"
            android:theme="@style/Theme.KohliAccessmentQuiz.NoActionBar"
            android:screenOrientation="nosensor" />
        <activity
            android:name="com.example.kohliassessmentquiz.QuizActivity"
            android:screenOrientation="nosensor"/>
        <activity
            android:name="com.example.kohliassessmentquiz.MainActivity"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>